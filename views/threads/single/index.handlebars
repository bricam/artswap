	<div class="container-fluid" style="background-image: url('/img/minimal.jpeg')">
	<div class="row">
	<div class="col-md-3"> </div> <!-- centers -->
    <div class="col-md-6"><br><br><br> <!-- resizes -->
    
    <div class="panel panel-default thread" style="border-radius: 12px;">
    <div class="panel-body">

  	<center>
	<h2> {{ thread.title}}</h2>
	</center>

	<h3>{{ thread.description }}</h3>

	<strong>Difficulty: </strong>
		{{ thread.difficulty }}
	<br>

	<strong>Purpose: </strong>
		{{ thread.purpose }}

	<br>
	<div class="pull-right">
		<h5>{{thread.createdAt}}<h5>
			

</div>
</div>

	</div>

	<form method="post">
		<textarea name="info" class="form-control" style="height: 100px; background:#F8F8F8;">
		</textarea>		
		<button type="submit" class="btn btn-default">Submit</button>
	</form>
<br>
	<div class="col-md-3">       
	</div>
	

	{{#each posts}}
		
		<div class="panel panel-default"> <div class="panel-body"> 
			
		{{ this.body }} 
		<br>
			<div class="pull-right">
			<h5>{{this.createdAt}}</h5>
			</div>
		</div></div>
		
	{{/each}}




</div>
</div>
</div>
